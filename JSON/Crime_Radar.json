{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "South Australia Crime Composition Comparison â€” 2011 vs 2022 (Aligned Spider Grid)",
  "width": 450,
  "height": 450,
  "padding": 55,
  "autosize": {"type": "none", "contains": "padding"},

  "signals": [
    {"name": "radius", "update": "width / 2.4"},
    {"name": "grid_steps", "value": 5}
  ],

  "data": [
    {
      "name": "table",
      "values": [
        {"key": "Drug", "value": 2755, "year": "2011"},
        {"key": "Other", "value": 1228, "year": "2011"},
        {"key": "Property", "value": 6070, "year": "2011"},
        {"key": "Public Order", "value": 3108, "year": "2011"},
        {"key": "Violent", "value": 4818, "year": "2011"},
        {"key": "White Collar", "value": 1784, "year": "2011"},
        {"key": "Drug", "value": 4757, "year": "2022"},
        {"key": "Other", "value": 2362, "year": "2022"},
        {"key": "Property", "value": 10473, "year": "2022"},
        {"key": "Public Order", "value": 4545, "year": "2022"},
        {"key": "Violent", "value": 8631, "year": "2022"},
        {"key": "White Collar", "value": 2198, "year": "2022"}
      ]
    },
    {
      "name": "keys",
      "source": "table",
      "transform": [{"type": "aggregate", "groupby": ["key"]}]
    },
    {
      "name": "grid_rings",
      "transform": [
        {
          "type": "sequence",
          "start": 0,
          "stop": {"signal": "max(data('table').value)"},
          "step": {"signal": "max(data('table').value) / grid_steps"}
        },
        {"type": "formula", "as": "r", "expr": "datum.data"}
      ]
    },
    {
      "name": "ring_points",
      "source": "grid_rings",
      "transform": [
        {
          "type": "sequence",
          "start": {"signal": "-PI/2"},
          "stop": {"signal": "1.5*PI"},
          "step": {"signal": "PI/3"},
          "as": "angle"
        },
        {"type": "formula", "as": "x", "expr": "scale('radial', datum.r) * cos(datum.angle)"},
        {"type": "formula", "as": "y", "expr": "scale('radial', datum.r) * sin(datum.angle)"}
      ]
    },
    {
      "name": "outer_ring",
      "values": [
        {"angle": -1.5708},
        {"angle": -0.5236},
        {"angle": 0.5236},
        {"angle": 1.5708},
        {"angle": 2.6179},
        {"angle": 3.6652},
        {"angle": -1.5708}
      ],
      "transform": [
        {"type": "formula", "as": "x", "expr": "radius * cos(datum.angle)"},
        {"type": "formula", "as": "y", "expr": "radius * sin(datum.angle)"}
      ]
    }
  ],

  "scales": [
    {
      "name": "angular",
      "type": "point",
      "range": {"signal": "[-PI/2, 1.5*PI]"},
      "padding": 0.5,
      "domain": [
        "Drug",
        "Other",
        "Property",
        "Public Order",
        "Violent",
        "White Collar"
      ]
    },
    {
      "name": "radial",
      "type": "linear",
      "range": {"signal": "[0, radius]"},
      "domain": {"data": "table", "field": "value"}
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": ["2011", "2022"],
      "range": ["#004aad", "#d73027"]
    }
  ],

  "marks": [
    {
      "type": "line",
      "from": {"data": "ring_points"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear-closed"},
          "x": {"signal": "radius + datum.x"},
          "y": {"signal": "radius + datum.y"},
          "stroke": {"value": "#e0e0e0"},
          "strokeWidth": {"value": 1}
        }
      }
    },

    {
      "type": "line",
      "from": {"data": "outer_ring"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear-closed"},
          "x": {"signal": "radius + datum.x"},
          "y": {"signal": "radius + datum.y"},
          "stroke": {"value": "#b0b0b0"},
          "strokeWidth": {"value": 2}
        }
      }
    },

    {
      "type": "rule",
      "from": {"data": "keys"},
      "encode": {
        "enter": {
          "x": {"signal": "radius"},
          "y": {"signal": "radius"},
          "x2": {"signal": "radius + radius * cos(scale('angular', datum.key))"},
          "y2": {"signal": "radius + radius * sin(scale('angular', datum.key))"},
          "stroke": {"value": "#cccccc"},
          "strokeWidth": {"value": 1}
        }
      }
    },

    {
      "type": "group",
      "from": {"facet": {"data": "table", "name": "facet", "groupby": ["year"]}},
      "encode": {"enter": {"x": {"signal": "radius"}, "y": {"signal": "radius"}}},
      "marks": [
        {
          "type": "line",
          "from": {"data": "facet"},
          "encode": {
            "enter": {
              "interpolate": {"value": "linear-closed"},
              "x": {"signal": "scale('radial', datum.value) * cos(scale('angular', datum.key))"},
              "y": {"signal": "scale('radial', datum.value) * sin(scale('angular', datum.key))"},
              "stroke": {"scale": "color", "field": "year"},
              "strokeWidth": {"value": 2},
              "fill": {"scale": "color", "field": "year"},
              "fillOpacity": {"value": 0.15}
            }
          }
        },
        {
          "type": "text",
          "from": {"data": "facet"},
          "encode": {
            "enter": {
              "x": {"signal": "scale('radial', datum.value) * cos(scale('angular', datum.key))"},
              "y": {"signal": "scale('radial', datum.value) * sin(scale('angular', datum.key))"},
              "text": {"signal": "format(datum.value, ',')"},
              "align": {"value": "center"},
              "baseline": {"value": "middle"},
              "fontSize": {"value": 10},
              "fill": {"value": "black"}
            }
          }
        }
      ]
    },

    {
      "type": "text",
      "from": {"data": "keys"},
      "encode": {
        "enter": {
          "x": {"signal": "radius + (radius + 35) * cos(scale('angular', datum.key))"},
          "y": {"signal": "radius + (radius + 35) * sin(scale('angular', datum.key))"},
          "text": {"field": "key"},
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "fontSize": {"value": 11},
          "fill": {"value": "black"},
          "fontWeight": {"value": "bold"}
        }
      }
    }
  ],

  "legends": [
    {
      "fill": "color",
      "orient": "bottom",
      "title": "Year",
      "direction": "horizontal",
      "symbolType": "circle",
      "symbolSize": 120,
      "offset": 10
    }
  ]
}
